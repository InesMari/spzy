.search-box{
  height: 80rpx;
  padding: 0 80rpx;
  background: #fff;
  box-sizing: border-box;
  position: relative;
  border-bottom:1rpx solid #dee2e9;  
}
.search-box input{
  width: 100%;
  height: 100%;
  display: block;
}
.search-box .search-icon{
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.search-box .scan-icon{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}