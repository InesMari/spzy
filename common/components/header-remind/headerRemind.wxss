.remind-container {
  color: #e83b13;
  font-size: 24rpx;
  background-color: rgba(255, 247, 220, 1);
  box-shadow: 0px 1px 0px rgba(255, 236, 170, 1);
  overflow: hidden;
  position: relative;
}

.remind-container .icon {
  width: 34rpx;
  height: 34rpx;
  margin-top: -17rpx;
  padding: 0 20rpx;
  position: absolute;
  top: 50%;
}

.remind-container .text {
  width: calc(100% - 34rpx - 40rpx);
  margin-left: 74rpx;
}

.fl {
  float: left !important;
}

.view{
  display: flex;
  justify-content: center;
  flex-flow: column;
  padding: 10rpx 20rpx 10rpx 0;
}