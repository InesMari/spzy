/* 列表公用样式 */

.comlist {
  background: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #d6dbe2;
}

.comlist .item {
  padding: 0 30rpx;
  border-bottom: 1rpx solid #d6dbe2;
  line-height: 90rpx;
  height: 90rpx;
  position: relative;
}

.comlist .item:last-child {
  border: none;
}

.comlist .item .label {
  float: left;
  width: 150rpx;
  font-size: 30rpx;
  color: #666;
  height: 90rpx;
  position: relative;
}
/* label有上下行，下为解释类 */
.comlist .item .label-state{
  padding-top:20rpx;
  box-sizing: border-box;
}
.comlist .item .label-state>view{
  line-height: 1; 
  margin:2rpx 0; 
}


.comlist .item .input-text {
  float: left;
  margin-left: 30rpx;
  width: calc(100% - 180rpx);
  color: #333;
  font-size: 30rpx;
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  z-index: 9;
}

.comlist .item .input-text input{
  float: left;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;  
}
.comlist .item .two_ipt{
  position: relative;
  width: calc(100% - 150rpx);
  margin-left: 30rpx;
  float: left;
}
.comlist .item .two_ipt .input-text{
  width:48%;
  margin:0;
}
.comlist .item .two_ipt::after{
  content: "";
  height: 80%;
  position: absolute;
  top:10%;
  left: 50%;
  width: 1rpx;
  background: #d6dbe2;
}
.comlist .item .unit{
  position: absolute;
  height: 90rpx;
  line-height: 90rpx;
  right: 30rpx;
  top:0;
}
.comlist .item .input-text .unit{
  right: 0;
}

.comlist .item .right-ico, .comlist .item .bottom-arrow {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 30rpx;
  right: 10rpx;
}

.comlist .item .bottom-arrow {
  right: 30rpx;
}

.comlist .item-br {
  height: auto;
  overflow: hidden;
  line-height: 90rpx;
}

.comlist .item.item-br .label {
  height: auto;
}

.comlist .item .textarea {
  font-size: 24rpx;
  float: left;
  color: #333;
  line-height: 32rpx;
  width: calc(100% - 180rpx);
}

.comlist .item .textarea textarea {
  font-size: 24rpx;
  float: left;
  color: #333;
  line-height: 45rpx;
  width: 100%;
  height: 80rpx;
  padding: 10rpx 0;
}

.comlist .item-raido {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 90rpx;
}

.comlist .item-raido label {
  margin-right: 50rpx;
}

.comlist .log {
  padding: 0 30rpx;
  line-height: 38rpx;
}

.comlist .log .log-list {
  border-bottom: 1px solid #d6dbe2;
  line-height: 38rpx;
  font-size: 24rpx;
  padding: 15rpx 0;
}

.comlist .log .log-list:last-child {
  border: none;
}

.comlist .right-con {
  line-height: 90rpx;
  height: 90rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
  font-size: 24rpx;
}

.comlist .item.label_long .label{
  width: 180rpx;
}
.comlist .item.label_long .input-text{
  width:calc(100% - 210rpx);
}

.comlist .item.img-item{
  padding:20rpx 30rpx;
  height: auto;
  overflow: hidden;
}
.comlist .item.img-item .label{
  line-height: 120rpx;
}
.comlist .item.img-item .img-box{
  margin-left: 30rpx;
  float: left;
}
.comlist .item.moreLine{
  height: auto;
  overflow: hidden;
  position: relative;
  padding-right: 100rpx;
}
.comlist .item.moreLine .label{
  line-height: 100rpx;
  height: 100rpx;
}
.comlist .item.moreLine .input-text{
  line-height: 36rpx;
  min-height: 60rpx;
  padding:20rpx 0;
  display: flex;
  align-items: center;
}
.comlist .item.moreLine .del{
  position: absolute;
  height: 34rpx;
  width:34rpx;
  top:50%;
  right: 30rpx;
  margin-top: -17rpx;
}

/* 左右结构 */
.comlist .item-justify .label{
  width: auto;
}
.comlist .item-justify .input-text{
  float: right;
  width: auto;
  padding-right: 40rpx;
  font-size: 30rpx;
}

